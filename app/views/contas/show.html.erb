<%- model_class = Conta -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
  <dd><%= @conta.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parcelas) %>:</strong></dt>
  <dd><%= @conta.parcelas %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vencimento) %>:</strong></dt>
  <dd><%= @conta.vencimento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor) %>:</strong></dt>
  <dd><%= @conta.valor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pago) %>:</strong></dt>
  <dd><%= @conta.pago %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              contas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_conta_path(@conta), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              conta_path(@conta),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
