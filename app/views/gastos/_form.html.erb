<%= form_for @gasto, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :valor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :valor, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :data, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :data, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :descricao, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :descricao, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :categoria, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :categoria, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                gastos_path, :class => 'btn' %>
  </div>
<% end %>
